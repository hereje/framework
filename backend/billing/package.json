{
    "name": "@juicyllama/billing",
    "version": "0.0.50",
    "description": "Juicyllama Billing Module",
    "author": {
        "name": "JuicyLlama Studio",
        "email": "studio@juicyllama.com",
        "url": "https://juicyllama.com"
    },
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
    "repository": {
        "type": "git",
        "url": "https://github.com/juicyllama/framework/backend/billing"
    },
    "bugs": "https://github.com/juicyllama/framework",
    "license": "0BSD",
    "readmeFilename": "README.md",
    "main": "dist/index.js",
    "files": [
        "dist/**/*",
        "*.md"
    ],
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "rm -fr dist && tsc",
        "prepare": "pnpm run build",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "test": "jest --runInBand --detectOpenHandles --forceExit --passWithNoTests",
        "test:clear": "npx jest --clearCache",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage"
    },
    "devDependencies": {
        "@juicyllama/dev": "workspace:*"
    },
    "dependencies": {
        "@juicyllama/core": "workspace:*",
        "@juicyllama/utils": "workspace:*"
    },
	"optionalDependencies": {
		"@juicyllama/app-xero-cc": "workspace:*"
	},
	"eslintConfig": {
		"extends": [
			"./node_modules/@juicyllama/dev/dist/.eslintrc.js"
		]
	},
	"prettier": "./node_modules/@juicyllama/dev/dist/.prettierrc.js",
	"jest": {
		"preset": "./node_modules/@juicyllama/dev/dist/jest.config.js"
	}
}

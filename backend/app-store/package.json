{
    "name": "@juicyllama/app-store",
    "version": "0.1.0",
    "description": "Juicyllama App Store Module",
    "author": {
        "name": "JuicyLlama Studio",
        "email": "studio@juicyllama.com",
        "url": "https://juicyllama.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/juicyllama-npm/app-store"
    },
    "bugs": "https://github.com/juicyllama/framework",
    "license": "0BSD",
    "readmeFilename": "README.md",
    "main": "dist/index.js",
    "files": [
        "dist/**/*",
        "*.md"
    ],
    "types": "dist/index.d.ts",
    "scripts": {
        "sandbox": "nest start --config src/sandbox/nest-cli.json --watch ",
        "build": "tsc",
        "prepare": "pnpm run build",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint --fix",
        "test": "export $(grep -v '^#' ../../.env.development) && NODE_ENV=test && jest --runInBand --detectOpenHandles --forceExit",
        "test:clear": "npx jest --clearCache",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "prerelease": "npm run format && npm run lint && npm run test && npm run build ",
        "postrelease": "pnpm publish --no-git-checks --access=public",
        "release": "release-it --ci",
        "release:minor": "release-it minor --ci",
        "release:major": "release-it major --ci",
        "releaseit:skip": "release-it --ci"
    },
    "devDependencies": {
        "@juicyllama/dev": "workspace:*"
    },
    "dependencies": {
        "@juicyllama/core": "workspace:*",
        "@juicyllama/utils": "workspace:*"
    },
    "optionalDependencies": {
        "@juicyllama/app-wordpress": "workspace:*"
    },
    "eslintConfig": {
        "extends": [
            "./node_modules/@juicyllama/dev/.eslintrc.js"
        ]
    },
    "prettier": "./node_modules/@juicyllama/dev/.prettierrc.js",
    "release-it": {
        "hooks": {
            "after:release": [
                "npm run postrelease",
                "echo âœ… Successfully released ${name} v${version} to ${npm.name}."
            ]
        },
        "npm": {
            "publish": false
        },
        "github": {
            "release": false
        },
        "git": {
            "commit": true,
            "tag": true,
            "push": true,
            "requireCleanWorkingDir": false
        }
    }
}

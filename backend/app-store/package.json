{
    "name": "@juicyllama/app-store",
    "version": "0.1.1",
    "description": "Juicyllama App Store Module",
    "author": {
        "name": "JuicyLlama Studio",
        "email": "studio@juicyllama.com",
        "url": "https://juicyllama.com"
    },
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
    "repository": {
        "type": "git",
        "url": "https://github.com/juicyllama/framework/backend/app-store"
    },
    "bugs": "https://github.com/juicyllama/framework",
    "license": "0BSD",
    "readmeFilename": "README.md",
    "main": "dist/index.js",
    "files": [
        "dist/**/*",
        "*.md"
    ],
    "types": "dist/index.d.ts",
    "scripts": {
        "sandbox": "nest start --config src/sandbox/nest-cli.json --watch ",
        "build": "tsc",
        "prepare": "pnpm run build",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint --fix",
        "test": "export $(grep -v '^#' ../../.env.development) && NODE_ENV=test && jest --runInBand",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage"
    },
    "devDependencies": {
        "@juicyllama/dev": "workspace:*",
        "@juicyllama/app-wordpress": "workspace:*"
    },
    "dependencies": {
        "@juicyllama/core": "workspace:*",
        "@juicyllama/utils": "workspace:*"
    },
	"eslintConfig": {
		"extends": [
			"./node_modules/@juicyllama/dev/dist/.eslintrc.js"
		]
	},
	"prettier": "./node_modules/@juicyllama/dev/dist/.prettierrc.js"
}

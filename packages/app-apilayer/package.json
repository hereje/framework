{
    "name": "@juicyllama/app-apilayer",
    "version": "0.0.27",
    "description": "Juicyllama ApiLayer App",
    "author": {
        "name": "JuicyLlama Studio",
        "email": "studio@juicyllama.com",
        "url": "https://juicyllama.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/juicyllama-npm/app-apilayer"
    },
    "bugs": "https://github.com/juicyllama-npm/app-apilayer",
    "license": "0BSD",
    "readmeFilename": "README.md",
    "main": "dist/index.js",
    "files": [
        "dist/**/*",
        "*.md"
    ],
    "types": "dist/index.d.ts",
    "scripts": {
        "start:dev": "tsc -w",
        "build": "tsc",
        "prepare": "npm run build",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "test": "jest --detectOpenHandles --forceExit",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prerelease": "npm run format && npm run lint && npm run build && npm run test",
        "release": "release-it --ci",
        "release:minor": "release-it minor --ci",
        "release:major": "release-it major --ci"
    },
    "peerDependencies": {
        "@juicyllama/core": "workspace:*"
    },
    "devDependencies": {
        "@juicyllama/dev": "workspace:*"
    },
    "eslintConfig": {
        "extends": [
            "./node_modules/@juicyllama/dev/.eslintrc.js"
        ]
    },
    "prettier": "./node_modules/@juicyllama/dev/.prettierrc.js",
    "release-it": {
        "hooks": {
            "after:release": "echo âœ… Successfully released ${name} v${version} to ${npm.name}."
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": false
        },
        "git": {
            "commit": true,
            "tag": true,
            "push": true,
            "requireCleanWorkingDir": false
        }
    }
}

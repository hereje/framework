{
    "$schema": "https://codesandbox.io/schemas/tasks.json",
    "setupTasks": [],
    "tasks": {
        "FontAwesome": {
            "name": "FontAwesome",
            "command": "echo -e \"@fortawesome:registry=https://npm.fontawesome.com/\\n//npm.fontawesome.com/:_authToken=$FONTAWESOME_AUTH_TOKEN\" > $pwd/.npmrc",
            "runOn": "setup"
        },
        "install:framework": {
            "name": "install:framework",
            "command": "pnpm install:framework",
            "runOn": "setup"
        }
    }
}

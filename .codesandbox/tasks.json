{
    "setupTasks": [
        {
            "name": "Install Dependencies",
            "command": "pnpm install"
        }
    ],
    "tasks": {
        "FontAwesome Auth": {
            "name": "install",
            "command": "echo -e \"@fortawesome:registry=https://npm.fontawesome.com/\\n//npm.fontawesome.com/:_authToken=${{ FONTAWESOME_AUTH_TOKEN }}\" > .npmrc",
            "runAtStart": true
        },
        "install:framework": {
            "name": "install:framework",
            "command": "pnpm install:framework",
            "runAtStart": true
        }
    }
}

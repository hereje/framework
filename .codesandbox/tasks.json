{
    "$schema": "https://codesandbox.io/schemas/tasks.json",
    "setupTasks": [],
    "tasks": {
        "prepare": {
            "name": "prepare",
            "command": "echo -e \"auto-install-peers=true\\nshamefully-hoist=true\\n@fortawesome:registry=https://npm.fontawesome.com/\\n//npm.fontawesome.com/:_authToken=$FONTAWESOME_AUTH_TOKEN\" > .npmrc",
            "runOn": "setup"
        },
        "install:framework": {
            "name": "install:framework",
            "command": "pnpm install:framework",
            "runOn": "setup"
        }
    }
}

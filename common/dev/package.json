{
	"name": "@juicyllama/dev",
	"version": "0.0.56",
	"description": "Juicyllama Framework Development Dependencies",
	"author": {
		"name": "JuicyLlama Studio",
		"email": "studio@juicyllama.com",
		"url": "https://juicyllama.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/juicyllama-npm/dev"
	},
    "bugs": "https://github.com/juicyllama/framework",
	"license": "0BSD",
	"readmeFilename": "README.md",
	"main": "index.js",
	"files": [
		"dist/**/*",
		"*.md",
		"*.js",
		"*.ts",
		"index.ts"
	],
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"prepare": "npm run build",
		"format": "prettier --write .",
		"lint": "eslint --fix",
		"test": "jest --runInBand --detectOpenHandles --forceExit",
        "prerelease": "npm run format && npm run lint && npm run test && npm run build ",
        "postrelease": "pnpm publish --no-git-checks --access=public",
        "release": "release-it --ci",
        "release:minor": "release-it minor --ci",
        "release:major": "release-it major --ci",
        "releaseit:skip": "release-it --ci"
	},
	"dependencies": {
		"@babel/preset-typescript": "^7.22.11",
		"@faker-js/faker": "^8.0.2",
		"@nestjs/testing": "10.2.1",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.4",
		"@types/multer": "^1.4.7",
		"@types/node": "^20.5.6",
		"@types/passport": "^1.0.11",
		"@types/passport-http": "^0.3.9",
		"@types/passport-jwt": "^3.0.9",
		"@types/passport-local": "^1.0.35",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^6.4.1",
		"@typescript-eslint/parser": "^6.4.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"dotenv": "^16.3.1",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"i": "^0.3.7",
		"jest": "^29.6.4",
		"jest-environment-jsdom": "^29.6.4",
		"npm": "^9.6.5",
		"prettier": "^3.0.2",
		"release-it": "^16.1.5",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"tsc-watch": "6.0.4",
		"tsconfig-paths": "^4.1.2"
	},
    "release-it": {
        "hooks": {
            "after:release": [
                "npm run postrelease",
                "echo âœ… Successfully released ${name} v${version} to ${npm.name}."
            ]
        },
        "npm": {
            "publish": false
        },
        "github": {
            "release": false
        },
        "git": {
            "commit": true,
            "tag": true,
            "push": true,
            "requireCleanWorkingDir": false
        }
    }
}

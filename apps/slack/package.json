{
    "name": "@juicyllama/app-slack",
    "version": "0.0.2",
    "description": "Juicyllama NestJs Slack App",
    "author": {
        "name": "JuicyLlama Studio",
        "email": "studio@juicyllama.com",
        "url": "https://juicyllama.com"
    },
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
    "repository": {
        "type": "git",
        "url": "https://github.com/juicyllama/framework/apps/slack"
    },
    "bugs": "https://github.com/juicyllama/framework",
    "license": "0BSD",
    "readmeFilename": "README.md",
    "main": "dist/index.js",
    "files": [
        "dist/**/*",
        "*.md"
    ],
    "types": "dist/index.d.ts",
    "scripts": {
        "sandbox": "nest start --config src/sandbox/nest-cli.json --watch ",
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "test": "jest --detectOpenHandles --forceExit",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@slack/bolt": "latest",
        "@juicyllama/core": "workspace:*",
        "@juicyllama/utils": "workspace:*"
    },
    "devDependencies": {
        "@juicyllama/dev": "workspace:*"
    },
	"eslintConfig": {
		"extends": [
			"./node_modules/@juicyllama/dev/dist/.eslintrc.js"
		]
	},
	"prettier": "./node_modules/@juicyllama/dev/dist/.prettierrc.js"
}
